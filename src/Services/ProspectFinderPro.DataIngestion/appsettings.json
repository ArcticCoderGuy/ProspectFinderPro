{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=ProspectFinderPro;User Id=sa;Password=ProspectFinder2024!;TrustServerCertificate=true"
  },
  "CompanyFactsApi": {
    "BaseUrl": "https://companyfacts.eu",
    "RateLimitPerMinute": 60
  },
  "AvoinDataApi": {
    "BaseUrl": "https://avoindata.fi/data/fi/api/3/action/",
    "RateLimitPerMinute": 100
  },
  "YTJApi": {
    "BaseUrl": "https://avoindata.fi/data/fi/api/3/action/",
    "RateLimitPerMinute": 100
  },
  "VeroApi": {
    "BaseUrl": "https://api.vero.fi/",
    "RateLimitPerMinute": 30,
    "RequiresAuthentication": true
  },
  "DataIngestion": {
    "IntervalHours": 6,
    "BatchSize": 50,
    "MaxRetries": 3,
    "ProcessingDelay": 500,
    "TargetTurnoverMin": 5000000,
    "TargetTurnoverMax": 10000000
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "CacheDurationMinutes": 60
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/data-ingestion-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}